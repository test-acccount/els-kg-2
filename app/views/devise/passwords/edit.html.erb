<%= content_for :title do %>
  <%= t(".change_your_password") %>
<% end %>

<div class="p-4 md:p-8 rounded shadow-small">
  <h1 class="text-center leading-none mb-6"><%= t(".change_your_password") %></h1>
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, wrapper: :form) do |f| %>
    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>

    <%= f.input :password,
                label: t(".new_password"),
                required: true,
                autofocus: true,
                hint: t("devise.shared.minimum_password_length", count: @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation, label: t(".confirm_new_password"), required: true %>

    <%= f.button :submit, t(".change_my_password"), class: "mt-2 w-full" %>
  <% end %>
</div>
