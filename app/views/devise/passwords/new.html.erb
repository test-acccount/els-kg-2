<%= content_for :title do %>
  <%= t(".forgot_your_password") %>
<% end %>

<div class="p-4 md:p-8 rounded shadow-small">
  <h1 class="text-center leading-none mb-6"><%= t(".forgot_your_password") %></h1>
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, wrapper: :form) do |f| %>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %>

    <%= f.button :submit, t(".send_me_reset_password_instructions"), class: "mt-2 w-full" %>
  <% end %>

  <div class="text-center mt-5">
    <%= link_to t("devise.back_to_sign_in"), new_user_session_path %>
  </div>
</div>
